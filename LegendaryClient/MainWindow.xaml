<Window x:Class="LegendaryClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="768" Width="1024" MinHeight="768" MinWidth="1024"  
        ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Border Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="Black"
                              Direction="270"
                              BlurRadius="10"
                              ShadowDepth="3" />
        </Border.Effect>
        <Grid Background="#FF505050">
            <Grid.RowDefinitions>
                <RowDefinition Height="4" />
                <RowDefinition Height="*" />
                <RowDefinition Height="4" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="4" />
            </Grid.ColumnDefinitions>
            <DockPanel Grid.RowSpan="3" Grid.ColumnSpan="3">
                <DockPanel Name="TitleBar"
                           DockPanel.Dock="Top"
                           Height="32"
                           Background="#FF646464">
                    <Button x:Name="LogoButton" Style="{StaticResource NoHoverStyle}"
                               VerticalAlignment="Top"
                               Content="LegendaryClient Alpha"
                               Foreground="White"
                               FontWeight="999"
                               FontSize="16" 
                               Height="32"
                               Background="#FF6E6E6E" Click="LogoButton_Click"/>
                    <Button Style="{StaticResource NoHoverStyle}"
                            x:Name="CloseButton" 
                            Background="#FF343434" 
                            Content="X" 
                            FontWeight="999" 
                            FontSize="16" 
                            Height="34"
                            VerticalAlignment="Center" 
                            Width="34" 
                            Foreground="White" 
                            BorderBrush="{x:Null}" 
                            VerticalContentAlignment="Center" 
                            Click="CloseButton_Click" HorizontalAlignment="Center" DockPanel.Dock="Right" Margin="2,0"/>
                    <Button Style="{StaticResource NoHoverStyle}"
                            x:Name="MinimizeButton" 
                            Background="#FF343434" 
                            Content="_" 
                            FontWeight="999" 
                            FontSize="16" 
                            Height="34"
                            VerticalAlignment="Center" 
                            Width="34" 
                            Foreground="White" 
                            BorderBrush="{x:Null}" 
                            VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Right" Click="MinimizeButton_Click"/>
                </DockPanel>
                <DockPanel Name="NavigationBar"
                           DockPanel.Dock="Top"
                           Height="32"
                           Background="#FF505050" HorizontalAlignment="Center">
                    <Button x:Name="PlayButton" Style="{StaticResource NoHoverStyle}"
                                Content="PLAY" 
                                Height="32" 
                                FontWeight="999" 
                                FontSize="16" 
                                VerticalAlignment="Top" 
                                Width="100" 
                                Background="#FF505050" 
                                Foreground="#FFAAAAAA" Click="PlayButton_Click"/>
                    <Button x:Name="ProfileButton" Style="{StaticResource NoHoverStyle}"
                                Content="PROFILE" 
                                Height="32" 
                                FontWeight="999" 
                                FontSize="16" 
                                VerticalAlignment="Top" 
                                Width="100" 
                                Background="#FF505050" 
                                Foreground="#FFAAAAAA" Click="ProfileButton_Click"/>
                    <Button x:Name="ShopButton" Style="{StaticResource NoHoverStyle}"
                                Content="SHOP" 
                                Height="32" 
                                FontWeight="999" 
                                FontSize="16" 
                                VerticalAlignment="Top" 
                                Width="100" 
                                Background="#FF505050" 
                                Foreground="#FFAAAAAA" Click="ShopButton_Click"/>
                    <Button x:Name="ChatButton" Style="{StaticResource NoHoverStyle}"
                                Content="CHAT" 
                                Height="32" 
                                FontWeight="999" 
                                FontSize="16" 
                                VerticalAlignment="Top" 
                                Width="100" 
                                Background="#FF505050" 
                                Foreground="#FFAAAAAA"/>
                    <Button x:Name="ReplayButton" Style="{StaticResource NoHoverStyle}"
                                Content="REPLAYS"
                                Height="32" 
                                FontWeight="999" 
                                FontSize="16" 
                                VerticalAlignment="Top" 
                                Width="100" 
                                Background="#FF505050" 
                                Foreground="#FFAAAAAA"/>
                    <Button x:Name="SettingsButton" Style="{StaticResource NoHoverStyle}"
                                Content="SETTINGS" 
                                Height="32" 
                                FontWeight="999" 
                                FontSize="16" 
                                VerticalAlignment="Top" 
                                Width="100"  
                                Background="#FF505050" 
                                Foreground="#FFAAAAAA" HorizontalAlignment="Left"/>
                    <Button x:Name="LogoutButton" Style="{StaticResource NoHoverStyle}"
                                Content="PATCH" 
                                Height="32" 
                                FontWeight="999" 
                                FontSize="16" 
                                VerticalAlignment="Top" 
                                Width="100" 
                                Background="#FF505050" 
                                Foreground="White" Click="LogoutButton_Click"/>
                </DockPanel>
                <Frame Style="{StaticResource NoDottedBorder}" x:Name="Container" VerticalAlignment="Stretch" Background="#FF9B9B9B" NavigationUIVisibility="Hidden"></Frame>
            </DockPanel>
            <Rectangle Name="topLeft" Fill="#00000000" />
            <Rectangle Name="top" Grid.Column="1" Fill="#00000000" />
            <Rectangle Name="topRight" Fill="#00000000" Grid.Column="2" />
            <Rectangle Name="right" Fill="#00000000" Grid.Row="1" Grid.Column="2" />
            <Rectangle Name="bottomRight" Fill="#00000000" Grid.Row="2" Grid.Column="2" />
            <Rectangle Name="bottom" Fill="#00000000" Grid.Row="2" Grid.Column="1" />
            <Rectangle Name="bottomLeft" Fill="#00000000" Grid.Row="2" />
            <Rectangle Name="left" Fill="#00000000" Grid.Row="1" />
        </Grid>
    </Border>
</Window>
