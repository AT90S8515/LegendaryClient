<Page x:Class="LegendaryClient.Windows.ChampSelectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:LegendaryClient.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="672" d:DesignWidth="1024"
	Title="ChampSelectPage">

    <Grid Background="#FF9B9B9B">
        <Image x:Name="BackgroundSplash" Stretch="UniformToFill" Opacity=".40" />
        <Label x:Name="GameStatusLabel" Content="Loading Champ Select..." HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="22" Foreground="White"/>
        <Label x:Name="LobbyTimeLabel" Content="Inf." HorizontalAlignment="Right" Margin="0,5,120,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="22" Foreground="White"/>
        <Button x:Name="DodgeButton" Content="Dodge" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Height="35" Width="100" Click="DodgeButton_Click"/>
        <Label Content="Blue Team" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="22" Foreground="White"/>
        <local:ChampSelectPlayer x:Name="BluePlayer1" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top"  Width="125" Height="80" Visibility="Hidden"></local:ChampSelectPlayer>
        <local:ChampSelectPlayer x:Name="BluePlayer2" HorizontalAlignment="Left" Margin="10,170,0,0" VerticalAlignment="Top"  Width="125" Height="80" Visibility="Hidden"></local:ChampSelectPlayer>
        <local:ChampSelectPlayer x:Name="BluePlayer3" HorizontalAlignment="Left" Margin="10,260,0,0" VerticalAlignment="Top"  Width="125" Height="80" Visibility="Hidden"></local:ChampSelectPlayer>
        <local:ChampSelectPlayer x:Name="BluePlayer4" HorizontalAlignment="Left" Margin="10,350,0,0" VerticalAlignment="Top"  Width="125" Height="80" Visibility="Hidden"></local:ChampSelectPlayer>
        <local:ChampSelectPlayer x:Name="BluePlayer5" HorizontalAlignment="Left" Margin="10,440,0,0" VerticalAlignment="Top"  Width="125" Height="80" Visibility="Hidden"></local:ChampSelectPlayer>
        
        <Label Content="Purple Team" HorizontalAlignment="Right" Margin="0,40,10,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="22"  Foreground="White"/>
        <local:ChampSelectPlayer x:Name="PurplePlayer1" HorizontalAlignment="Right" Margin="0,80,10,0" VerticalAlignment="Top"  Width="125" Height="80" Visibility="Hidden"></local:ChampSelectPlayer>
        <local:ChampSelectPlayer x:Name="PurplePlayer2" HorizontalAlignment="Right" Margin="0,170,10,0" VerticalAlignment="Top"  Width="125" Height="80" Visibility="Hidden"></local:ChampSelectPlayer>
        <local:ChampSelectPlayer x:Name="PurplePlayer3" HorizontalAlignment="Right" Margin="0,260,10,0" VerticalAlignment="Top"  Width="125" Height="80" Visibility="Hidden"></local:ChampSelectPlayer>
        <local:ChampSelectPlayer x:Name="PurplePlayer4" HorizontalAlignment="Right" Margin="0,350,10,0" VerticalAlignment="Top"  Width="125" Height="80" Visibility="Hidden"></local:ChampSelectPlayer>
        <local:ChampSelectPlayer x:Name="PurplePlayer5" HorizontalAlignment="Right" Margin="0,440,10,0" VerticalAlignment="Top"  Width="125" Height="80" Visibility="Hidden"></local:ChampSelectPlayer>
        <ListView x:Name="ChampionSelectListView" HorizontalAlignment="Stretch" Height="200" Margin="145,80,145,0" VerticalAlignment="Top" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Background="#66505050">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <EventSetter Event="PreviewMouseDown" Handler="ListViewItem_PreviewMouseDown" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        <Button x:Name="LockInButton" Content="Lock In" Margin="0,285,0,0" VerticalAlignment="Top" Width="75" Click="LockInButton_Click"/>
    </Grid>
</Page>
