<Page x:Class="LegendaryClient.Windows.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="672" d:DesignWidth="1024"
	Title="SettingsPage">

    <Page.Resources>
        <Style x:Key="NoListViewHeader" TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="Visibility" Value="Collapsed" />
        </Style>

        <Style x:Key="DisableHeaderButton" TargetType="Button">
            <Style.Triggers>
                <DataTrigger Binding="{Binding File}" Value="">
                    <Setter Property="Visibility" Value="Hidden"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="DisableHeaderTextbox" TargetType="TextBox">
            <Style.Triggers>
                <DataTrigger Binding="{Binding File}" Value="">
                    <Setter Property="Visibility" Value="Hidden"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Background="#FF9B9B9B">
        <TabControl x:Name="SettingsTabControl" HorizontalAlignment="Stretch" Margin="10,10,10,10" VerticalAlignment="Stretch" Background="#FF9B9B9B" BorderBrush="{x:Null}" SelectedIndex="1">
            <TabItem x:Name="AdvancedItem" Header="Main" Visibility="Collapsed">
                <Grid Background="#FF9B9B9B">
                    <ListView x:Name="FilesListView" HorizontalAlignment="Left" Margin="10,30,0,0" Width="300" VerticalAlignment="Stretch" Foreground="White" Background="#FF505050" SelectionChanged="FilesListView_SelectionChanged">
                        <ListView.View>
                            <GridView ColumnHeaderContainerStyle="{StaticResource NoListViewHeader}">
                                <GridViewColumn />
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <ListView x:Name="CFGListView" HorizontalAlignment="Stretch" Margin="320,30,0,0" VerticalAlignment="Stretch" Foreground="White" Background="#FF505050"  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.View>
                            <GridView ColumnHeaderContainerStyle="{StaticResource NoListViewHeader}">
                                <GridViewColumn x:Name="SettingHeader" Header="Setting" DisplayMemberBinding="{Binding Setting}"/>
                                <GridViewColumn>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBox Style="{StaticResource DisableHeaderTextbox}" Margin="0" VerticalAlignment="Center" Width="300" Text="{Binding Value}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Style="{StaticResource DisableHeaderButton}" Content="Save Setting" Margin="0" VerticalAlignment="Center" Tag="{Binding File}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
        </TabControl>

        <Label Content="Advanced Settings" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="40" Width="300" Foreground="White" FontSize="20" FontWeight="Bold"/>
        <Button Content="Basic Settings" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="100" Height="35"/>
    </Grid>
</Page>
