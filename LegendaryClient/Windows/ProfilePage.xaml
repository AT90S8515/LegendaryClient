<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:Controls="clr-namespace:LegendaryClient.Controls" x:Class="LegendaryClient.Windows.ProfilePage" 
      mc:Ignorable="d" 
      d:DesignHeight="672" d:DesignWidth="1024"
	Title="ProfilePage">

    <Page.Resources>
        <Style x:Key="NoListViewHeader" TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="Visibility" Value="Collapsed" />
        </Style>
    </Page.Resources>

    <Grid>
        <Image x:Name="ProfileImage" HorizontalAlignment="Left" Height="64" Margin="10,10,0,0" VerticalAlignment="Top" Width="64" Source="/LegendaryClient;component/33.jpg">
            <Image.Effect>
                <DropShadowEffect/>
            </Image.Effect>
        </Image>
        <Label x:Name="SummonerNameLabel" Content="Summoner" HorizontalAlignment="Left" Margin="80,5,0,0" VerticalAlignment="Top" FontSize="22"/>
        <Label x:Name="SummonerLevelLabel" Content="Level 0" HorizontalAlignment="Left" Margin="80,40,0,0" VerticalAlignment="Top" FontWeight="ExtraLight" FontSize="22"/>
        <TextBox x:Name="SearchTextBox" HorizontalAlignment="Right" Height="23" Margin="0,30,90,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="180"/>
        <Button x:Name="SearchButton" Content="Search" HorizontalAlignment="Right" Margin="0,31,10,0" VerticalAlignment="Top" Width="75" IsDefault="True" Click="SearchButton_Click"/>
        <TabControl HorizontalAlignment="Stretch" Margin="10,100,0,0" VerticalAlignment="Stretch">
            <TabItem Header="Ingame">
                <Frame x:Name="InGameContainer">
                </Frame>
            </TabItem>
            <TabItem Header="Overview">
                <Grid/>
            </TabItem>
            <TabItem Header="Leagues">
                <Grid/>
            </TabItem>
            <TabItem Header="Match History">
                <Grid>
                    <ListView x:Name="GamesListView" HorizontalAlignment="Left" Margin="10,10,0,10" Width="300" VerticalAlignment="Stretch" Foreground="White" Background="#FF505050">
                        <ListView.View>
                            <GridView ColumnHeaderContainerStyle="{StaticResource NoListViewHeader}">
                                <GridViewColumn />
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <ListView x:Name="BlueListView" HorizontalAlignment="Center" Height="64" Margin="300,10,0,0" VerticalAlignment="Top" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Width="310" Background="#66505050">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                    </ListView>
                    <Label Content="VS." HorizontalAlignment="Center" VerticalAlignment="Top" Margin="300,62,0,0" FontWeight="ExtraLight" FontSize="50"/>
                    <ListView x:Name="PurpleListView" HorizontalAlignment="Center" Height="64" Margin="300,130,0,0" VerticalAlignment="Top" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Width="310" Background="#66505050">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                    </ListView>
                    <ListView x:Name="GameStatsListView" HorizontalAlignment="Stretch" Margin="320,200,10,10" VerticalAlignment="Stretch" Foreground="White" Background="#FF505050">
                        <ListView.View>
                            <GridView ColumnHeaderContainerStyle="{StaticResource NoListViewHeader}">
                                <GridViewColumn x:Name="GameKeyHeader" Header="Key" DisplayMemberBinding="{Binding Key}"/>
                                <GridViewColumn x:Name="GameValueHeader" Header="Value" DisplayMemberBinding="{Binding Value}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Champions">
                <Grid/>
            </TabItem>
            <TabItem Header="Runes">
                <Grid/>
            </TabItem>
            <TabItem Header="Masteries">
                <Grid/>
            </TabItem>
            <TabItem Header="Skins">
                <Grid/>
            </TabItem>
        </TabControl>

    </Grid>
</Page>
