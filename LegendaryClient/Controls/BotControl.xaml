        <Label x:Name="OwnerLabel" Content="Owner" HorizontalAlignment="Right" Margin="0,0,5,0" FontSize="20" FontWeight="ExtraLight" VerticalAlignment="Top" Visibility="Hidden" />
        <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="140" Margin="70,37,0,0"/>
        <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="215,37,0,0"/>
    </Grid>
