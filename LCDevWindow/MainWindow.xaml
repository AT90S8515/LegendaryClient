<win:MetroWindow x:Class="LCDevWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:win="http://metro.mahapps.com/winfx/xaml/controls"
        Title="LC Dev Window" Height="350" Width="525" ResizeMode="CanMinimize">
    <Grid>
        <RichTextBox HorizontalAlignment="Left" Height="272" VerticalAlignment="Top" Width="497" Margin="10,10,0,0">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" win:TextBoxHelper.Watermark="Enter Dev Command Here" VerticalAlignment="Bottom" Width="417" Margin="10,0,0,10"/>
        <Button Content="Send" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="75" Margin="432,0,0,10"/>

    </Grid>
</win:MetroWindow>
